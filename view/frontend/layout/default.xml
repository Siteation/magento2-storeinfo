<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <referenceContainer name="head.additional">
        <block name="storeinfo.schema" template="Siteation_StoreInfo::head/schema.phtml">
            <arguments>
                <argument name="store_info" xsi:type="object">Siteation\StoreInfo\ViewModel\StoreInfo</argument>
                <argument name="store_info_hours" xsi:type="object">Siteation\StoreInfo\ViewModel\StoreInfoHours</argument>
                <argument name="store_info_socials" xsi:type="object">Siteation\StoreInfo\ViewModel\StoreInfoSocials</argument>
                <argument name="store_info_logo" xsi:type="object">Siteation\StoreInfo\ViewModel\StoreInfoLogo</argument>
            </arguments>
        </block>
    </referenceContainer>

    <referenceContainer name="after.body.start">
        <block name="storeinfo.notice" template="Siteation_StoreInfo::html/notice.phtml">
            <arguments>
                <argument name="store_info_notice" xsi:type="object">Siteation\StoreInfo\ViewModel\StoreInfoNotice</argument>
            </arguments>
        </block>
    </referenceContainer>

    <referenceContainer name="footer">
        <block name="storeinfo.address" template="Siteation_StoreInfo::html/address.phtml">
            <arguments>
                <argument name="store_info" xsi:type="object">Siteation\StoreInfo\ViewModel\StoreInfo</argument>
                <argument name="css_classes" xsi:type="string">footer-block storeinfo</argument>
            </arguments>
        </block>
        <block name="storeinfo.hours" template="Siteation_StoreInfo::html/hours.phtml">
            <arguments>
                <argument name="store_info_hours" xsi:type="object">Siteation\StoreInfo\ViewModel\StoreInfoHours</argument>
                <argument name="heading" xsi:type="string" translate="true">Opening Hours</argument>
                <argument name="css_classes" xsi:type="string">footer-block storeinfo</argument>
            </arguments>
        </block>
        <block name="storeinfo.socials" template="Siteation_StoreInfo::html/socials.phtml">
            <arguments>
                <argument name="store_info_socials" xsi:type="object">Siteation\StoreInfo\ViewModel\StoreInfoSocials</argument>
                <argument name="heading" xsi:type="string" translate="true">Follow us on</argument>
                <argument name="css_classes" xsi:type="string">footer-block storeinfo</argument>
            </arguments>
        </block>
    </referenceContainer>
</page>
